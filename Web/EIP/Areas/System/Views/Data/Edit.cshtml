@{
    Layout = "~/Views/Shared/_LayoutPageBaseEdit.cshtml";
}

<div class="box-body">
    <div class="col-md-12">
        <div class="form-group">
            <label class="col-sm-2 control-label m">归属菜单</label>
            <div class="col-sm-10">
                <div class="input-group">
                    <input type="text" name="MenuName" id="MenuName" class="form-control" data-pure-clear-button placeholder="归属菜单" readonly="readonly">
                    <span id="menuBtn" class="input-group-addon pointer"><i class="fa fa-search"></i></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label m">名称</label>
            <div class="col-sm-10">
                <input type="text" name="Name" id="Name" data-pure-clear-button class="form-control" placeholder="名称">
            </div>
        </div>
       
        <div class="form-group">
            <label class="col-sm-2 control-label">选项</label>
            <div class="col-sm-10">
                <label>
                    <input type="checkbox" data-flag="icheck" class="minimal" name="IsFreeze" id="IsFreeze" />冻结
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">表达式</label>
            <div class="col-sm-10">
                <script id="editor" name="editor" type="text/plain" style="height: 150px; width: 658px;">
                    </script>
                <div id="fieldvalues" style="clear: both; float: left; text-align: left;">
                    <a class="fieldvaluelink all" onclick=" javascript: void (0); " val="{所有}" title="{所有}">{所有}</a>
                    <a class="fieldvaluelink current_user_id" onclick=" javascript: void (0); " val="{当前用户}" title="{当前用户}">{当前用户}</a>
                    <a class="fieldvaluelink current_organization_id" onclick=" javascript: void (0); " val="{所在组织}" title="{所在组织}">{所在组织}</a>
                    <a class="fieldvaluelink chosen_organization_id" onclick=" javascript: void (0); " val="{指定组织}" title="{指定组织}">{指定组织}</a>
                    <a class="fieldvaluelink current_post_id" onclick=" javascript: void (0); " val="{所在岗位}" title="{所在岗位}">{所在岗位}</a>
                    <a class="fieldvaluelink chosen_post_id" onclick=" javascript: void (0); " val="{指定岗位}" title="{指定岗位}">{指定岗位}</a>
                    <a class="fieldvaluelink current_group_id" onclick=" javascript: void (0); " val="{所在工作组}" title="{所在工作组}">{所在工作组}</a>
                    <a class="fieldvaluelink chosen_group_id" onclick=" javascript: void (0); " val="{指定工作组}" title="{指定工作组}">{指定工作组}</a>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">排序号</label>
            <div class="col-sm-10">
                <input type="text" name="OrderNo" class="form-control" data-pure-clear-button placeholder="排序号">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">备注</label>
            <div class="col-sm-10">
                <textarea class="form-control" name="Remark" data-pure-clear-button placeholder="备注"></textarea>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="MenuButtonId" name="MenuButtonId" value="@Context.Request.Query["id"]"/>
<input type="hidden" id="MenuId" name="MenuId" />

<div class="dropdown-menu" id="content" style="display:none;">
    <div class="ip-control">
        <div class="box-tools">
            <div class="input-group" id="input-group" style="padding-left:5px">
                <input type="text" id="searchValueKey" class="form-control input-sm" placeholder="请输入关键字...">
                <div class="input-group-btn">
                    <a class="btn btn-sm btn-default" id="searchValue"><i class="fa fa-search"></i></a>
                </div>
            </div>
        </div>
    </div>
    <ul id="select-tree" class="jstree" style="margin-top:0; height: 223px; overflow: auto"></ul>
</div>
<script src="~/app/system/data/edit.js"></script>
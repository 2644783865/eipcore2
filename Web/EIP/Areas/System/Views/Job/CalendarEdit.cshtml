@{
    Layout = "~/Views/Shared/_LayoutPageBaseEdit.cshtml";
}
<div class="box-body">
    <div class="col-md-12">
        <div class="form-group">
            <label class="col-sm-2 control-label m">名称</label>
            <div class="col-sm-10">
                <input type="text" id="CalendarName" name="CalendarName" value="@Context.Request.Query["calendarName"]" data-pure-clear-button class="form-control" placeholder="请输入名称">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label m">Cron表达式</label>
            <div class="col-sm-10">
                <div class="input-group">
                    <input type="text" name="Expression" data-pure-clear-button class="form-control" placeholder="请输入Cron表达式">
                    <span id="cron" class="input-group-addon pointer"><i class="fa fa-search"></i></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">选项</label>
            <div class="col-sm-10">
                <label>
                    <input type="checkbox" data-flag="icheck" class="minimal" name="UpdateTriggers" id="UpdateTriggers" />更新相关作业
                </label>
                <label>
                    <input type="checkbox" data-flag="icheck" class="minimal" name="ReplaceExists" id="ReplaceExists" />替换现有日历
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">描述</label>
            <div class="col-sm-10">
                <textarea class="form-control" name="Description" data-pure-clear-button placeholder="请输入描述"></textarea>
            </div>
        </div>
    </div>
</div>

<script src="~/app/system/job/calendaredit.js"></script>